-- SUBZERO SCRIPT - Polished Loading Screen v1.0 (Restored Version)
-- KRNL-Compatible, Fullscreen, Clean Design

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "SubzeroLoadingScreen"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
screenGui.Parent = PlayerGui

-- Background
local background = Instance.new("Frame")
background.BackgroundColor3 = Color3.new(0, 0, 0)
background.Size = UDim2.new(1, 0, 1, 0)
background.Position = UDim2.new(0, 0, 0, 0)
background.BorderSizePixel = 0
background.Parent = screenGui

-- Title
local title = Instance.new("TextLabel")
title.Text = "SUBZERO SCRIPT"
title.Font = Enum.Font.GothamBlack
title.TextSize = 48
title.TextColor3 = Color3.fromRGB(0, 170, 255)
title.BackgroundTransparency = 1
title.Size = UDim2.new(1, 0, 0, 100)
title.Position = UDim2.new(0, 0, 0.1, 0)
title.Parent = background

-- Initializing Text
local initText = Instance.new("TextLabel")
initText.Text = "INITIALIZING..."
initText.Font = Enum.Font.Gotham
initText.TextSize = 24
initText.TextColor3 = Color3.fromRGB(255, 255, 255)
initText.BackgroundTransparency = 1
initText.Size = UDim2.new(1, 0, 0, 50)
initText.Position = UDim2.new(0, 0, 0.2, 0)
initText.Parent = background

-- Loading Bar Frame
local barFrame = Instance.new("Frame")
barFrame.Size = UDim2.new(0.6, 0, 0.03, 0)
barFrame.Position = UDim2.new(0.2, 0, 0.7, 0)
barFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
barFrame.BorderSizePixel = 0
barFrame.ClipsDescendants = true
barFrame.Parent = background

-- Bar Fill
local barFill = Instance.new("Frame")
barFill.Size = UDim2.new(0, 0, 1, 0)
barFill.Position = UDim2.new(0, 0, 0, 0)
barFill.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
barFill.BorderSizePixel = 0
barFill.Parent = barFrame

-- Warning
local warning = Instance.new("TextLabel")
warning.Text = "⚠️ Don’t quit. If you exit while loading, there’s a high chance you’ll get banned."
warning.Font = Enum.Font.GothamSemibold
warning.TextSize = 18
warning.TextWrapped = true
warning.TextColor3 = Color3.new(1, 1, 1)
warning.BackgroundTransparency = 1
warning.Size = UDim2.new(1, -40, 0, 50)
warning.Position = UDim2.new(0, 20, 0.76, 0)
warning.Parent = background

-- Tip Text
local tip = Instance.new("TextLabel")
tip.Text = "TIP: Use KRNL responsibly to avoid detection."
tip.Font = Enum.Font.Gotham
ip.TextSize = 18
tip.TextColor3 = Color3.fromRGB(200, 200, 200)
tip.BackgroundTransparency = 1
tip.Size = UDim2.new(1, -40, 0, 40)
tip.Position = UDim2.new(0, 20, 0.83, 0)
tip.Parent = background

-- Estimated Time Left
local timeLeft = Instance.new("TextLabel")
timeLeft.Text = "Estimated time left: 1m 30s"
timeLeft.Font = Enum.Font.Gotham
timeLeft.TextSize = 16
timeLeft.TextColor3 = Color3.fromRGB(180, 180, 180)
timeLeft.BackgroundTransparency = 1
timeLeft.Size = UDim2.new(1, -40, 0, 30)
timeLeft.Position = UDim2.new(0, 20, 0.88, 0)
timeLeft.Parent = background

-- Animate loading bar
local duration = 90 -- seconds
local tween = TweenService:Create(barFill, TweenInfo.new(duration, Enum.EasingStyle.Linear), {Size = UDim2.new(1, 0, 1, 0)})
tween:Play()

-- Countdown logic
spawn(function()
	for i = duration, 1, -1 do
		timeLeft.Text = "Estimated time left: " .. math.floor(i / 60) .. "m " .. (i % 60) .. "s"
		wait(1)
	end
end)

-- After loading complete
wait(duration + 1)
screenGui:Destroy()
