-- SUBZERO LOADER + EGG PET RANDOMIZER UI
-- Full-screen loading UI then pet egg gacha system

-- // SERVICES
local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Clear old UIs
if playerGui:FindFirstChild("SUBZERO_Loader") then playerGui.SUBZERO_Loader:Destroy() end
if playerGui:FindFirstChild("EggRandomizerUI") then playerGui.EggRandomizerUI:Destroy() end

-- // LOADING UI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "SUBZERO_Loader"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(1, 0, 1, 0)
mainFrame.BackgroundColor3 = Color3.new(0, 0, 0)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

local function createLabel(text, posY, sizeY, size, color, font)
    local lbl = Instance.new("TextLabel")
    lbl.Size = UDim2.new(1, 0, sizeY, 0)
    lbl.Position = UDim2.new(0, 0, posY, 0)
    lbl.Text = text
    lbl.Font = font or Enum.Font.Gotham
    lbl.TextColor3 = color or Color3.new(1, 1, 1)
    lbl.TextSize = size or 22
    lbl.BackgroundTransparency = 1
    lbl.Parent = mainFrame
    return lbl
end

local title = createLabel("SUBZERO SCRIPT", 0.1, 0.1, 48, Color3.fromRGB(0, 255, 255), Enum.Font.GothamBlack)
local status = createLabel("Initializing...", 0.2, 0.05, 20, nil, Enum.Font.Code)
local loadingText = createLabel("Loading", 0.3, 0.05)
local timeText = createLabel("Estimated Time Left: 1:30", 0.55, 0.05, 20)
local warning = createLabel("‚ö†Ô∏è Don‚Äôt quit. You may get banned.", 0.6, 0.05, 18, Color3.fromRGB(255, 80, 80))
local tip = createLabel("Tip: Use in private servers.", 0.66, 0.04, 18, Color3.fromRGB(200, 200, 200))

-- Loading bar
local barBG = Instance.new("Frame")
barBG.Size = UDim2.new(0.6, 0, 0.03, 0)
barBG.Position = UDim2.new(0.2, 0, 0.5, 0)
barBG.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
barBG.BorderSizePixel = 0
barBG.Parent = mainFrame

local bar = Instance.new("Frame")
bar.Size = UDim2.new(0, 0, 1, 0)
bar.BackgroundColor3 = Color3.fromRGB(0, 255, 180)
bar.BorderSizePixel = 0
bar.Parent = barBG

-- Dot animation
coroutine.wrap(function()
    while screenGui.Parent do
        for i = 1, 3 do
            loadingText.Text = "Loading" .. string.rep(".", i)
            wait(0.5)
        end
    end
end)()

local fakeStatuses = {"Initializing...", "Verifying Executor...", "Syncing...", "Preparing GUI..."}
local tips = {"Tip: Use in private servers.", "Tip: Don‚Äôt spam.", "Tip: Wait fully.", "Tip: Report bugs."}

coroutine.wrap(function()
    while true do for _, t in ipairs(fakeStatuses) do status.Text = t wait(2) end end
end)()

coroutine.wrap(function()
    while true do for _, t in ipairs(tips) do tip.Text = t wait(5) end end
end)()

-- Progress bar
local totalTime = 90
for i = 1, totalTime do
    local percent = i / totalTime
    TweenService:Create(bar, TweenInfo.new(1), {
        Size = UDim2.new(percent, 0, 1, 0)
    }):Play()
    local secondsLeft = totalTime - i
    timeText.Text = string.format("Estimated Time Left: %d:%02d", secondsLeft/60, secondsLeft%60)
    wait(1)
end

-- Fade out
local fadeFrame = Instance.new("Frame")
fadeFrame.Size = UDim2.new(1, 0, 1, 0)
fadeFrame.BackgroundColor3 = Color3.new(0, 0, 0)
fadeFrame.BackgroundTransparency = 1
fadeFrame.ZIndex = 10
fadeFrame.Parent = mainFrame
TweenService:Create(fadeFrame, TweenInfo.new(2), {BackgroundTransparency = 0}):Play()
wait(2)
screenGui:Destroy()

-- // EGG RANDOMIZER UI // --
local eggGui = Instance.new("ScreenGui")
eggGui.Name = "EggRandomizerUI"
eggGui.IgnoreGuiInset = true
eggGui.ResetOnSpawn = false
eggGui.Parent = playerGui

local eggFrame = Instance.new("Frame")
eggFrame.Size = UDim2.new(0.4, 0, 0.5, 0)
eggFrame.Position = UDim2.new(0.3, 0, 0.25, 0)
eggFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
eggFrame.BorderSizePixel = 0
eggFrame.Parent = eggGui
Instance.new("UICorner", eggFrame)

-- Inputs
local ageBox = Instance.new("TextBox")
ageBox.PlaceholderText = "Age (default random)"
ageBox.Size = UDim2.new(0.45, -5, 0.1, 0)
ageBox.Position = UDim2.new(0.05, 0, 0.1, 0)
ageBox.Font = Enum.Font.Gotham
ageBox.TextColor3 = Color3.new(1, 1, 1)
ageBox.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
ageBox.TextSize = 18
ageBox.Parent = eggFrame
Instance.new("UICorner", ageBox)

local weightBox = ageBox:Clone()
weightBox.PlaceholderText = "Weight (kg)"
weightBox.Position = UDim2.new(0.5, 5, 0.1, 0)
weightBox.Parent = eggFrame

-- Inventory & Result
local result = Instance.new("TextLabel")
result.Size = UDim2.new(1, 0, 0.15, 0)
result.Position = UDim2.new(0, 0, 0.25, 0)
result.Text = "Click the egg to hatch!"
result.Font = Enum.Font.GothamBold
result.TextColor3 = Color3.fromRGB(0, 255, 180)
result.TextSize = 22
result.BackgroundTransparency = 1
result.Parent = eggFrame

local inventoryList = Instance.new("TextLabel")
inventoryList.Size = UDim2.new(1, -10, 0.4, 0)
inventoryList.Position = UDim2.new(0, 5, 0.4, 0)
inventoryList.Text = "Inventory:\n"
inventoryList.Font = Enum.Font.Code
inventoryList.TextXAlignment = Enum.TextXAlignment.Left
inventoryList.TextYAlignment = Enum.TextYAlignment.Top
inventoryList.TextColor3 = Color3.new(1, 1, 1)
inventoryList.TextSize = 16
inventoryList.BackgroundTransparency = 1
inventoryList.TextWrapped = true
inventoryList.TextScaled = false
inventoryList.Parent = eggFrame

-- Egg Button
local pets = {"Mimic", "Spinosaurus", "Raccoon", "T-Rex", "Butterfly"}
local eggBtn = Instance.new("TextButton")
eggBtn.Size = UDim2.new(0.9, 0, 0.12, 0)
eggBtn.Position = UDim2.new(0.05, 0, 0.85, 0)\neggBtn.Text = "üéÅ Hatch Egg"
eggBtn.Font = Enum.Font.GothamSemibold
eggBtn.TextColor3 = Color3.new(1, 1, 1)
eggBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
eggBtn.TextSize = 20
eggBtn.Parent = eggFrame
Instance.new("UICorner", eggBtn)

local inventory = {}

eggBtn.MouseButton1Click:Connect(function()
    local pet = pets[math.random(1, #pets)]
    local age = tonumber(ageBox.Text) or math.random(1, 5)
    local weight = tonumber(weightBox.Text) or math.random(30, 150)
    local display = string.format("%s [%d KG] [Age %d]", pet, weight, age)

    table.insert(inventory, display)
    result.Text = "üéâ You got: " .. display

    local invText = "Inventory:\n"
    for _, p in ipairs(inventory) do invText = invText .. p .. "\n" end
    inventoryList.Text = invText
end)

-- Toggle button (top left)
local toggleBtn = Instance.new("TextButton")
toggleBtn.Size = UDim2.new(0, 100, 0, 30)
toggleBtn.Position = UDim2.new(0, 10, 0, 10)
toggleBtn.Text = "üß∫ Toggle UI"
toggleBtn.Font = Enum.Font.GothamBold
toggleBtn.TextSize = 16
toggleBtn.TextColor3 = Color3.new(1,1,1)
toggleBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
toggleBtn.Parent = eggGui
Instance.new("UICorner", toggleBtn)

local visible = true
toggleBtn.MouseButton1Click:Connect(function()
    visible = not visible
    eggFrame.Visible = visible
end)
